{
    "name": "strava",
    "version": "1.0.0",
    "main": "index.ts",
    "license": "MIT",
    "scripts": {
        "prebuild": "rm -rf dist",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "prettier": "prettier --write src",
        "REMOVEdocker:prepare-db": "docker volume create --name=stravaapp-db",
        "docker:start-db": "docker-compose up -d db",
        "REMOVEgrafana:prepare-data": "docker volume create --name=stravaapp-grafana-data",
        "grafana:start": "docker-compose up --build -d grafana",
        "prisma:studio": "prisma studio",
        "prisma:db-push": "prisma db push",
        "prisma:migrate-dev": "prisma migrate dev",
        "web:prod": "docker-compose up --build -d web",
        "lint-staged": "lint-staged",
        "lint": "eslint -c eslint.config.mjs src",
        "checkTS": "tsc -p tsconfig.json",
        "prepare": "husky"
    },
    "dependencies": {
        "@nestjs/common": "^10.4.6",
        "@nestjs/core": "^10.4.6",
        "@nestjs/platform-express": "^10.4.6",
        "@nestjs/schedule": "^4.1.1",
        "@prisma/client": "5.19.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "node-fetch": "^3.3.2",
        "prisma": "^5.21.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "strava-v3": "^2.2.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.5",
        "@nestjs/schematics": "^10.2.2",
        "@nestjs/testing": "^10.4.6",
        "@tidio/eslint-plugin-tidio": "^5.1.0",
        "@tidio/prettier-config": "^2.3.1",
        "@types/express": "^4.17.21",
        "@types/node": "^22.7.9",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
        "@typescript-eslint/parser": "^8.11.0",
        "eslint": "^9.13.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "source-map-support": "^0.5.21",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3"
    },
    "prettier": "@tidio/prettier-config"
}
